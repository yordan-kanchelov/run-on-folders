{
    "name": "run-on-folders",
    "version": "0.2.0",
    "description": "Run desired cli command on many folders",
    "main": "index.js",
    "scripts": {
        "prepublish": "npm run build",
        "build": "tsc",
        "build:watch": "tsc -w",
        "pretty-check": "npx prettier -c ./src/**/*.ts",
        "watch": "npx nodemon dist/index.js -- echo WATCHING",
        "start": "node dist/index.js",
        "debug": "npx npm-run-all -p build:watch watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jkanchelov/run-on-folders.git"
    },
    "bin": {
        "run-on-folders": "./dist/index.js"
    },
    "keywords": [
        "cli",
        "command",
        "util",
        "folders",
        "automation"
    ],
    "author": "yordan.kanchelov",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/jkanchelov/run-on-folders/issues"
    },
    "homepage": "https://github.com/jkanchelov/run-on-folders#readme",
    "dependencies": {
        "chalk": "^2.4.2",
        "fancy-log": "^1.3.3",
        "prompts": "^2.3.0",
        "yargs": "^15.0.2"
    },
    "devDependencies": {
        "@types/node": "^17.0.26",
        "@types/fancy-log": "^1.3.1",
        "@types/prompts": "^2.0.3",
        "@types/yargs": "^13.0.3",
        "husky": "^3.0.5",
        "nodemon": "^2.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "typescript": "^3.7.2"
    }
}
